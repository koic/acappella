#!/usr/bin/env ruby

lib_path = File.expand_path('../../lib', __FILE__)
$:.unshift(lib_path)

require 'acappella'
require 'uri'

options = ACappella::OptionParser.parse(ARGV)

uri = URI.parse("druby://#{options[:host]}:#{options[:port]}")

server = ACappella::Server.new(uri.to_s)

Signal.trap(:INT) do
  server.stop

  puts; puts('bye'); exit(false)
end

server.start
