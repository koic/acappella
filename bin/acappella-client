#!/usr/bin/env ruby

lib_path = File.expand_path('../../lib', __FILE__)
$:.unshift(lib_path)

require 'acappella'

options = ACappella::OptionParser.parse(ARGV)

client = ACappella::Client.new("druby://#{options[:host]}:#{options[:port]}")

loop do
  message = STDIN.readline

  client.send(message)
end
