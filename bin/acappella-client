#!/usr/bin/env ruby

lib_path = File.expand_path('../../lib', __FILE__)
$:.unshift(lib_path)

require 'acappella'
require 'optparse'

options = ARGV.getopts('u:m:', 'uri:', 'message:')

unless options['u'] && options['m']
  puts ARGV.options.help; exit false
end

ACappella::Client.new(options['u']).send(options['m'])
