#!/usr/bin/env ruby

lib_path = File.expand_path('../../lib', __FILE__)
$:.unshift(lib_path)

require 'acappella'
require 'readline'
require 'uri'

options = ACappella::OptionParser.parse(ARGV) rescue exit(false)

uri = URI.parse("druby://#{options[:host]}:#{options[:port]}")

client = ACappella::Client.new(uri.to_s)

puts "Connect to #{uri}"

Signal.trap(:EXIT) { puts; exit(false) }

puts 'Ctrl-D to exit'

while message = Readline.readline('> ', true)
  client.send(message)
end
